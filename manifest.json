{
    "manifest_version": 3,
    "name": "GeneAI",
    "version": "1.0.0",
    "description": "GeneAI, a chrome extension that helps you write better.",
    "permissions":[
        "contextMenus"
    ],
    "host_permissions": ["https://www.everyprompt.com/*"],
    "background": {
        "service_worker": "background.js"
      },
    "action": {
        "default_title": "Gene-AI",
        "default_icon": "assets/favicon_package_v0.16/favicon-32x32.png",
        "default_popup": "popup.html"
      },

    "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Toggle Gene-Ai"
    }
  }


}